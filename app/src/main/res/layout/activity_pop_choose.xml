<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_pop"
    tools:context="com.example.calebfoo.split.PopChooseActivity">
    <Button
        android:id="@+id/splitBtn2"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/White"
        android:text="SPLIT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_pop"
        android:textColor="@color/White"
        />
        <Button
        android:id="@+id/advSplitBtn2"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/White"
        android:text="ADVSPLIT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/splitBtn2"
        android:layout_gravity="center"
        android:background="@drawable/button_pop"
        android:textColor="@color/White"
        android:onClick="onADVSeperate2"
        android:layout_marginLeft="5dp"
        />
</android.support.constraint.ConstraintLayout>